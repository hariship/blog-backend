{
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "type-check": "tsc --noEmit",
        "watch": "tsc --watch",
        "lint": "eslint 'src/**/*.ts'",
        "signal-bot": "ts-node src/signal-daemon-simple.ts",
        "signal-bot-docker": "ts-node src/signal-daemon.ts",
        "telegram-bot": "ts-node src/telegram-daemon.ts",
        "signal-link": "signal-cli link -n 'Signal Slack Bot'",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "docker:logs:backend": "docker-compose logs -f blog-backend",
        "docker:logs:telegram": "docker-compose logs -f telegram-bot",
        "docker:restart": "docker-compose restart",
        "docker:ps": "docker-compose ps"
    },
    "dependencies": {
        "@slack/types": "^2.15.0",
        "@slack/web-api": "^7.9.3",
        "aws-sdk": "^2.1692.0",
        "axios": "^1.7.2",
        "bcrypt": "^6.0.0",
        "cheerio": "^1.1.0",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "date-fns": "^3.6.0",
        "dotenv": "^16.5.0",
        "express": "^4.19.2",
        "express-validator": "^7.2.1",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "node-fetch": "^2.7.0",
        "nodemailer": "^6.10.1",
        "pg": "^8.13.1",
        "puppeteer": "^22.8.0",
        "redis": "^4.6.13",
        "rss": "^1.2.2",
        "uuid": "^11.1.0",
        "xml2js": "^0.6.2"
    },
    "devDependencies": {
        "@types/cheerio": "^0.22.35",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-validator": "^3.0.0",
        "@types/multer": "^2.0.0",
        "@types/node": "^20.19.9",
        "@types/node-fetch": "^2.6.4",
        "@types/nodemailer": "^6.4.8",
        "@types/pg": "^8.6.6",
        "@types/rss": "^0.0.32",
        "@types/uuid": "^10.0.0",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^8.39.0",
        "@typescript-eslint/parser": "^8.39.0",
        "eslint": "^9.32.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.4.5"
    }
}
