RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@haripriya.org
DOMAIN=https://your-domain.com
DB_HOST=localhost
DB_PASSWORD=your-db-password
DB_NAME=blog
DB_USER=postgres
REDIS_URL=redis://localhost:6379
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=your-aws-region
AWS_S3_BUCKET_NAME=your-s3-bucket

# Slack Configuration
# Get these tokens from https://api.slack.com/apps
# You need to create Slack apps with user:write scope
SLACK_TOKEN_ACCOUNT_1=xoxp-your-first-slack-token
SLACK_TOKEN_ACCOUNT_2=xoxp-your-second-slack-token

# Slack Cookie Configuration (for browser automation)
SLACK_D_COOKIE_1=your-first-account-d-cookie
SLACK_WORKSPACE_1=your-first-workspace
SLACK_D_COOKIE_2=your-second-account-d-cookie
SLACK_WORKSPACE_2=your-second-workspace

# Optional: Default webhook URL for Slack status updates
SLACK_WEBHOOK_URL=https://your-webhook-endpoint.com/slack/callback

# Signal Bot Configuration
SIGNAL_PHONE_NUMBER=+1234567890  # Your Signal bot phone number
SIGNAL_CLI_PATH=/opt/homebrew/bin/signal-cli  # Path to signal-cli binary
SIGNAL_API_URL=http://localhost:8080  # Using signal-cli-rest-api Docker
SIGNAL_RECIPIENTS=+1234567890,+9876543210  # Comma-separated list of recipients
SIGNAL_TEST_RECIPIENT=+1234567890  # Test recipient for /signal/test endpoint

# Telegram Bot Configuration  
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
TELEGRAM_ALLOWED_USERS=123456789,987654321  # Optional: comma-separated user IDs